<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">

<suite name="JDBC Test Suite (column strategy - mysql)" verbose="1">
    <parameter name="starturl" value="jdbc:mysql://localhost:3306/test"/>
    <parameter name="stopurl" value="jdbc:mysql://localhost:3306/test"/>
    <parameter name="user" value="root"/>
    <parameter name="password" value=""/>

    <test name="Sink tests (column strategy - mysql)">
        <parameter name="create" value="mysql/create-producttables.sql"/>
        <parameter name="delete" value="mysql/delete-producttables.sql"/>
        <parameter name="existedWhereClause" value="mysql/existedWhereClause.json"/>
        <parameter name="sqlForTestDeletions" value="mysql/sqlForTestDeletions.json"/>
        <parameter name="sqlForTestDeletionsAndWherePlaceholder" value="mysql/sqlForTestDeletionsAndWherePlaceholder.json"/>
        <parameter name="whereClausePlaceholder" value="mysql/whereClausePlaceholder.json"/>
        <parameter name="existedWhereClauseWithOverlap" value="mysql/existedWhereClauseWithOverlap.json"/>
        <parameter name="sqlparams" value="mysql/sqlparams.json"/>
        <parameter name="sqlInsert"
                    value="insert into products (id, name, amount, price, created_at, updated_at, deleted_at) VALUES(?,?,?,?,?,?,?)" />
        <parameter name="sqlUpdate"
                    value="update products set deleted_at=? where id=?" />
        <classes>
            <class name="org.xbib.jdbc.strategy.column.ColumnStrategySourceTests"/>
            <class name="org.xbib.jdbc.strategy.column.ColumnStrategyContextTests"/>
        </classes>
    </test>

</suite>